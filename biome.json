{
    "$schema": "https://biomejs.dev/schemas/2.3.5/schema.json",
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "on",
                "useSortedAttributes": "on",
                "useSortedKeys": "on"
            }
        },
        "enabled": true
    },
    "files": {
        "ignoreUnknown": false,
        "includes": [
            "**",
            "!node_modules/**",
            "!.next/**",
            "!out/**",
            "!build/**",
            "!next-env.d.ts",
            "!public/sw.js"
        ]
    },
    "formatter": {
        "attributePosition": "auto",
        "bracketSameLine": true,
        "bracketSpacing": true,
        "enabled": true,
        "expand": "auto",
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 80,
        "useEditorconfig": true
    },
    "html": {
        "formatter": {
            "selfCloseVoidElements": "always"
        }
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "asNeeded",
            "jsxQuoteStyle": "double",
            "quoteProperties": "asNeeded",
            "quoteStyle": "single",
            "semicolons": "asNeeded"
        },
        "globals": []
    },
    "linter": {
        "domains": {
            "next": "recommended",
            "react": "recommended"
        },
        "enabled": true,
        "rules": {
            "recommended": false,
            "style": {
                "noRestrictedImports": {
                    "level": "error",
                    "options": {
                        "paths": {
                            "@mui/icons-material": "No Barrel Import. Use `import [Icon] from '@mui/icons-material/[Icon]'` instead.",
                            "@mui/material": "No Barrel Import. Use `import [Component] from '@mui/material/[Component]'` instead."
                        }
                    }
                }
            },
            "suspicious": {
                "noConsole": "warn",
                "noExplicitAny": "error"
            }
        }
    },
    "vcs": {
        "clientKind": "git",
        "enabled": true,
        "useIgnoreFile": true
    }
}
